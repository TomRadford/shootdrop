{
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"prettier"
	],
	"rules": {
		"eqeqeq": "error",
		"no-console": "warn",
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 2,
				"singleQuote": true,
				"semi": false,
				"endOfLine": "auto"
			}
		]
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": "latest"
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"ignorePatterns": [
		"node_modules"
	]
}