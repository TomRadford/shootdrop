{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node"
	},
	"include": ["**/*"],
	"exclude": ["node_modules"]
}
