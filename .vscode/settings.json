{
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
	},
	"editor.tabSize": 2,
	"eslint.workingDirectories": [
		"./web",
		"./api"
	],
	{
		"css.lint.unknownAtRules": "ignore",
		"[css]": {
			"editor.defaultFormatter": "bradlc.vscode-tailwindcss"
		}
	}
}